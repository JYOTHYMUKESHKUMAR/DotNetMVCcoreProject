@{
    ViewData["Title"] = "Import CashIn Data";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Import CashIn Data</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h5><i class="icon fas fa-info"></i> Import Instructions</h5>
                            <p>1. Download and fill out the sample template with your CashIn data.</p>
                            <p>2. Ensure data includes: Customer Name, Amount Due, Date, Status, Project Name, Cost Center, Remark.</p>
                            <p>3. Upload your completed Excel (.xlsx) or CSV file below.</p>
                            <a href="@Url.Action("DownloadTemplate", "CashIn")" class="btn btn-success mt-2">
                                <i class="fas fa-file-excel"></i> Download Sample Template
                            </a>
                        </div>
                        <form asp-action="Import" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="file">Select Excel or CSV File:</label>
                                <input type="file" name="file" id="file" class="form-control-file" accept=".xlsx,.csv" />
                            </div>
                            <button type="submit" class="btn btn-primary">Import</button>
                        </form>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3">
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>